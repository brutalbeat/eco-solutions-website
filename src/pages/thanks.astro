---
import SiteLayout from '~/layouts/SiteLayout.astro';
import Container from '~/components/site/Container.astro';

const metadata = {
  title: 'Thank you',
  description: 'Thanks for reaching out. We will be in touch shortly.',
};
---

<SiteLayout metadata={metadata}>
  <section class="bg-page dark:bg-slate-950">
    <Container class="py-20 text-center">
      <h1 class="text-3xl font-bold tracking-tight text-primary dark:text-accent sm:text-4xl">Thank you</h1>
      <p class="mt-3 text-sm text-muted sm:text-base">
        We received your message and will respond as soon as possible.
      </p>
      <div class="mt-6 flex flex-col items-center gap-3 sm:flex-row sm:justify-center">
        <a class="btn-primary" href="/">Back to home</a>
        <a class="btn btn-secondary" href="/services">View services</a>
      </div>
    </Container>
  </section>
</SiteLayout>
