---
import Container from '~/components/site/Container.astro';
import { company } from '~/data/company';

const mapQuery = encodeURIComponent(company.addressLines.join(', '));
---

<footer class="border-t border-gray-200/70 bg-page dark:border-gray-800/70 dark:bg-slate-950">
  <Container class="py-12">
    <div class="grid gap-10 md:grid-cols-12">
      <div class="md:col-span-5">
        <p class="text-lg font-semibold tracking-tight text-gray-900 dark:text-white">{company.name}</p>
        <p class="mt-2 text-sm text-muted">
          {company.tagline}. Consistent quality for offices, retail, and facilities.
        </p>
        <p class="mt-4 text-sm text-muted">{company.serviceArea}</p>
      </div>

      <div id="contact" class="md:col-span-4">
        <p class="text-sm font-semibold text-gray-900 dark:text-white">Contact</p>
        <dl class="mt-3 space-y-2 text-sm text-muted">
          <div class="flex items-center justify-between gap-4">
            <dt class="text-gray-900 dark:text-white">Phone</dt>
            <dd>
              <a class="text-white hover:underline" href={`tel:${company.phone.replace(/[^+\d]/g, '')}`}>
                {company.phone}
              </a>
            </dd>
          </div>
          <div class="flex items-center justify-between gap-4">
            <dt class="text-gray-900 dark:text-white">Email</dt>
            <dd>
              <a class="text-white hover:underline" href={`mailto:${company.email}`}>
                {company.email}
              </a>
            </dd>
          </div>
          <div class="flex items-center justify-between gap-4">
            <dt class="text-gray-900 dark:text-white">Location</dt>
            <dd class="text-right">
              <a
                class="text-white hover:underline"
                href={`https://www.google.com/maps/search/?api=1&query=${mapQuery}`}
                target="_blank"
                rel="noreferrer"
              >
                {company.addressLines.map((line) => <span class="block">{line}</span>)}
              </a>
            </dd>
          </div>
        </dl>
      </div>

      <div class="md:col-span-3 flex items-center md:justify-end">
        <img src="/ecologlogo1.png" alt={`${company.name} logo`} class="h-29 w-auto rounded-md" loading="lazy" />
      </div>
    </div>

    <div
      class="mt-12 flex flex-col gap-2 border-t border-gray-200/70 pt-6 text-xs text-muted dark:border-gray-800/70 sm:flex-row sm:items-center sm:justify-between"
    >
      <p>Â© {new Date().getFullYear()} {company.name}. All rights reserved.</p>
      <p>Commercial cleaning and janitorial services.</p>
    </div>
  </Container>
</footer>
