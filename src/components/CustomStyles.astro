---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(186 43 52); /* brand red */
    --aw-color-secondary: rgb(145 33 40); /* deeper red */
    --aw-color-accent: rgb(206 95 94); /* soft red accent */

    --aw-color-text-heading: rgb(26 24 24);
    --aw-color-text-default: rgb(42 40 40);
    --aw-color-text-muted: rgb(42 40 40 / 65%);
    --aw-color-bg-page: rgb(247 246 244); /* light warm neutral */

    --aw-color-bg-page-dark: rgb(31 28 28); /* charcoal */

    ::selection {
      background-color: rgb(186 43 52 / 30%);
      color: rgb(26 24 24);
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(235 91 96);
    --aw-color-secondary: rgb(186 43 52);
    --aw-color-accent: rgb(206 95 94);

    --aw-color-text-heading: rgb(243 238 236);
    --aw-color-text-default: rgb(217 210 207);
    --aw-color-text-muted: rgb(217 210 207 / 65%);
    --aw-color-bg-page: rgb(20 18 18);

    ::selection {
      background-color: rgb(235 91 96 / 25%);
      color: rgb(243 238 236);
    }
  }
</style>
